<h2>Lista de Categorias: </h2>
<hr>
  <a href="/admin/categorias/add"> <button class="btn btn-success">Nova Categoria</button></a>

  {{#each categorias}}
      <div class="card mt-4">
        <div class="card-body">
          <h4>{{nome}}</h4>
          <small>Slug: {{slug}}</small><br>
          <small>date; {{date}}</small>
        
        </div>
         <a href="/admin/categorias/edit/{{_id}}"> <button class="btn btn-success mt-4 ">Edit</button></a>
          
                      <!--form to edi category  -->
          <form action="/admin/categorias/delete" method="post">
          <input type="hidden" name="id" value="{{_id}}">
           <button type="submit" class="btn btn-danger mt-2">Delete</button>

          </form>

      </div>
  {{else}}
       <h4 class="mt-3"> Não há registros</h4>
  {{/each}}
