<h2>Lista de Postagens: </h2>
<hr>
  <a href="/admin/postagens/add"> <button class="btn btn-success">Nova Postagem</button></a>

   {{#each postagens}}
       <div class="card">
         <div class="car-body">
            <h4>{{titulo}}</h4>
             <small>{{slug}}</small> 
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small>
            <p>Categoria: {{categoria.nome}}</p>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-2">Edit Postagem</button></a>
            
           
         </div>
       </div>
   {{else}}
         <p>Nenhuma postagem</p>
   {{/each}}